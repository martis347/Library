<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
     	xmlns:cxf="http://cxf.apache.org/core"
		xmlns:jaxws="http://cxf.apache.org/jaxws"
		xmlns:jaxrs="http://cxf.apache.org/jaxrs"
		xsi:schemaLocation="
			http://cxf.apache.org/core http://cxf.apache.org/schemas/core.xsd
			http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
			http://cxf.apache.org/jaxrs http://cxf.apache.org/schemas/jaxrs.xsd
			http://cxf.apache.org/jaxws http://cxf.apache.org/schemas/jaxws.xsd">

	<import resource="classpath:META-INF/cxf/cxf.xml"/>
	<import resource="classpath:META-INF/cxf/cxf-servlet.xml"/>

    <cxf:bus>
        <cxf:features>
            <cxf:logging/>
        </cxf:features>
    </cxf:bus>
	
	
	<bean id="sqlDao" class="com.library.sql.dao.impl.SQLManager">
    	<constructor-arg value="jdbc:sqlserver://localhost\\SQLEXPRESS:60548;databaseName=Stats;namedPipe=true"/>
    	<constructor-arg value="sa"/>
    	<constructor-arg value="test123"/>
	</bean>
	
	<bean id="bookDao" class="com.library.rest.dao.impl.BookManagerMemoryDao">
		<property name="sqlManager" ref="sqlDao"/>
	</bean>
	
	<bean id="bookManagerService" class="com.library.rest.services.impl.BookManagerService">
		<property name="bookDao" ref="bookDao"/>
	</bean>
	
	<bean id="jsonProvider" class="org.codehaus.jackson.jaxrs.JacksonJsonProvider"/>
	
  	<jaxrs:server id="bookManagerREST" address="/BookManager">
  		<jaxrs:serviceBeans>
  			<ref bean="bookManagerService"/>
  		</jaxrs:serviceBeans>
  		<jaxrs:providers>
			<ref bean='jsonProvider'/>
		</jaxrs:providers>
  	</jaxrs:server>

</beans>
